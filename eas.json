{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "env": {
        "NODE_OPTIONS": "--max_old_space_size=8192",
        "CI": "true",
        "EXPO_NO_METRO_WATCHER": "1"
      },
      "cache": { "disabled": true }
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": { "production": {} }
}
